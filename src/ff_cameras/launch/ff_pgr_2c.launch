<launch>

  <!-- run both cameras in the stereo_example namespace -->
  <group ns="cameras" >

    <!-- left camera -->
    <node pkg="camera1394" type="camera1394_node" name="camera1" >
      <rosparam file="$(find cameras)/launch/ffmv2c.yaml" />
      <param name="guid" value="00b09d0100ca5729" />
      <param name="camera_info_url" value="file://$(find cameras)/launch/calibration/camera1.yaml" />
      <param name="use_ros_time" value="true" />
      <remap from="camera" to="camera1" />
    </node>

    <!-- right camera -->
    <node pkg="camera1394" type="camera1394_node" name="camera2" >
      <rosparam file="$(find cameras)/launch/ffmv2c.yaml" />
      <param name="guid" value="00b09d0100ca5723" />
      <param name="camera_info_url" value="file://$(find cameras)/launch/calibration/camera2.yaml" />
      <param name="use_ros_time" value="true" />
      <remap from="camera" to="camera2" />
    </node>

  </group>
</launch>
